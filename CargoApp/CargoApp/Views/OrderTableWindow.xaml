<catel:DataWindow  x:Class="CargoApp.Views.OrderTableWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:CargoApp.Views"
                   xmlns:viewModels="clr-namespace:CargoApp.ViewModels"
                   xmlns:catel="http://schemas.catelproject.com"
                   mc:Ignorable="d"
                   Title="OrderTableWindow" Height="450" Width="800"
                   d:DataContext="{d:DesignInstance viewModels:OrderTableViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchBox" Width="200" 
                     Text="{Binding SearchQuery}"/>
            <Button Content="Искать" 
                    Command="{Binding SearchOrderCommand}"
                    Margin="5,0,0,0" />
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredOrders}" AutoGenerateColumns="True" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</catel:DataWindow>
